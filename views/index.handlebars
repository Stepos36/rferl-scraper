<h1 class="welcome text-center text-white">Welcome to Radio Freedom news scraper!</h1>
<br/>
<div class="container main-container">
    <div id="articles">
        <table id="articlesTable" class="cell-border compact stripe">
            <thead>
                <tr>
                    <th> </th>
                    <th>Article name</th>
                    <th>Reading est.</th>
                    <th>Publication date</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                {{#each article}}
			    <tr data-id={{this.link}}>
                    <td class="details-control"><button class="button-green">+</button></td>
                    <td data-name="{{this.title}}"><h5><a href='{{this.link}}'>{{this.title}}</a></h5>{{this.summary}}<p><button id={{this._id}} class="button-blue btn comment" type="button" data-toggle="modal" data-target="#popupModalCenter">View notes({{this.notes.length}})</button></p></td>
                    <td>{{this.readingTime}}</td>
                    <td>{{this.time}}</td>
                    <td>{{#if saved}}<button class="button-red saveButton delete" id={{this._id}}>Delete</button>{{else}}<button class="button-green saveButton save" id={{this._id}}>Save</button>{{/if}}</td>
			    </tr>
		        {{/each}}
            </tbody>
            <tfoot>
                <tr>
                    <th> </th>
                    <th>Article name</th>
                    <th>Reading est.</th>
                    <th>Publication date</th>
                    <th> </th>
                </tr>
            </tfoot>
        </table>
    </div>
<!-- Modals -->
<div class="modal fade" id="popupModalCenter" tabindex="-1" role="dialog" aria-labelledby="popupModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="popupModalLongTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="mt-2 mb-0">Notes:</p>
        <div class="comments card" style="min-height: 50px; padding:5px"></div>
        <div class="p-1">
            <p class="mt-2 mb-0">Create new note:</p>
            <div class="mt-1 input-group">
                <input id="newNoteTitle" type="text" class="form-control" placeholder="Note title">
            </div>       
            <div class="mt-1 input-group">
                <textarea class="form-control" id="newNoteBody" placeholder="Enter your note here"></textarea>
            </div>          
        </div>    
      </div>
      <div class="modal-footer">
        <button type="button" id="saveNote" class="btn btn-primary">Add new comment</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="scrapeModalCenter" tabindex="-1" role="dialog" aria-labelledby="scrapeModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="scrapeModalLongTitle">Scraping process</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card">
            <h4 class="font-italic scrapingStatus"></h4>
        </div>
        <div class="text-center"><button type="button" id="finishScrape" class="btn btn-primary">Finish scraping and reload page</button></div>
        </div>    
      </div>
    </div>
  </div>
</div>
</div>